  <!-- .30 Cal Bullet -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SLP_30CAL</defName>
    <label>0.30 Caliber bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
