  <!-- WA2000 -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SLP_Gun_WA2000_S</defName>
    <label>WA2000</label>
    <description>An ancient design of precision sniper rifle. Semi-automatic action. It has an exceptionally long range, great accuracy and good power. Because it's so unwieldy, other weapons outclass it at close range.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/SniperRifles/SLP_GER_WA2000_S</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	
	<equippedAngleOffset>-47.7</equippedAngleOffset>
	
    <soundInteract>SLP_WA2000Inter</soundInteract>
    <weaponTags>
      <li>SniperRifle</li>
    </weaponTags>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
	  <MarketValue>650</MarketValue>
      <WorkToMake>42500</WorkToMake>
      <Mass>7.9</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.71</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.87</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
	  <WoodLog>30</WoodLog>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_WA2000_762mm</defaultProjectile>
        <warmupTime>3.5</warmupTime>
        <range>42.9</range>
        <soundCast>SLP_WA2000Shot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
