      <AccuracyLong>0.14</AccuracyLong>
      <RangedWeapon_Cooldown>1.50</RangedWeapon_Cooldown>
    </statBases>
	<!--
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
	-->
