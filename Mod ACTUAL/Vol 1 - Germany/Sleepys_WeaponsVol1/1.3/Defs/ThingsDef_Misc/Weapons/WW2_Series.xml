      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
