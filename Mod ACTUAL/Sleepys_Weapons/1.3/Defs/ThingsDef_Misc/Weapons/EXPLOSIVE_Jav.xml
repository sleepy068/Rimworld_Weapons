<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseBullet">
    <defName>SLP_Bullet_JAV_HEAT</defName>
    <label>javelin HEAT rocket</label>
    <graphicData>
      <texPath>Things/Projectile/Rocket_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_DoomsdayRocket</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>7.8</explosionRadius>
      <speed>50</speed>
    </projectile>
  </ThingDef>


  <ThingDef ParentName="BaseGun">
    <defName>SLP_Gun_JAV_HEAT</defName>
    <label>FGM-148 Javelin (HEAT)</label>
    <description>A single-use rocket launcher that fires a high explosive anti-tank warhead. Good against tightly grouped enemies or heavily armour single tar. Starts fires.\n\nThe weapon is known as a 'fire and forget' launcher, meaning while it takes a little time to get and maintain a lock, once the fired, the missile will take care of any guidance required.</description>
    <tickerType>Normal</tickerType>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/MissileLaunchers/SLP_JAV_HEAT</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>850</MarketValue>
      <Mass>22.3</Mass>
      <RangedWeapon_Cooldown>0.25</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>Gun</li>
      <li>GunSingleUse</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>SingleUseWeapon</li>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <relicChance>0</relicChance>
    <verbs>
      <li>
        <verbClass>Verb_ShootOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_DoomsdayRocket</defaultProjectile>
        <forcedMissRadius>0.1</forcedMissRadius>
        <warmupTime>5.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>8</ai_AvoidFriendlyFireRadius>
        <range>46.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>7.8</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
      <li Class="CompProperties_Biocodable"/>
    </comps>
  </ThingDef>

</Defs>